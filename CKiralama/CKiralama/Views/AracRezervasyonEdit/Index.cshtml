@model IEnumerable<CKiralama.Model.AracRezervasyon>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/Site/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <p>
        @Html.ActionLink("Yeni Rezervasyon", "Create")
    </p>
    <table class="table" border="5" cellpadding="0" cellspacing="0">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.istasyonAlisYeri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.İstasyonTeslimYeri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.İstasyonAlisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.istasyonBitisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rezervasyondurum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KulllanıcıID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aracID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.İptalMi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.İptalTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ucret)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.istasyonAlisYeri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.İstasyonTeslimYeri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.İstasyonAlisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.istasyonBitisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rezervasyondurum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KulllanıcıID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aracID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.İptalMi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.İptalTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucret)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.rezervasyonID }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.rezervasyonID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.rezervasyonID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
